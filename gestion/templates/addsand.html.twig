{% extends "layout.html.twig" %}

{% block body %}

    <div class="container">

      <header class="jumbotron my-4">
        <h1 class="display-3">Liste Sandwichs</h1>
        <p class="lead">Desc</p>
      </header>

      <form class="form-signin" action="" method="POST">

        <h2 class="form-signin-heading">Ajouter Sandwich</h2>
        <label for="nom" class="sr-only">Nom</label>

        <input name="nom" type="text" id="nom" class="form-control" placeholder="Nom" required autofocus>

        <label for="description" class="sr-only">Description</label>

        <input name="description" type="text" id="description" class="form-control" placeholder="Description" required>

        <label for="type" class="sr-only">Type de pain</label>

        <input name="type" type="text" id="type" class="form-control" placeholder="Type de pain" required>

        <select class="form-control" name="categorie">
          {% for categorie in datacateg %}
            <option>{{ categorie.nom }}</option>
          {% endfor %}
        </select>

        <select class="form-control" name="taille">
          {% for taille in datataille %}
            <option>{{ taille.nom }}</option>
          {% endfor %}
        </select>

        <label for="prix" class="sr-only">Prix</label>

        <input name="prix" type="number" id="prix" class="form-control" placeholder="Prix" required>


        <label for="img" class="sr-only">Image url</label>

        <input name="img" type="text" id="img" class="form-control" placeholder="Image URL">

        <input type="hidden" name="{{ nameKey }}" value="{{ name }}">
        <input type="hidden" name="{{ valueKey }}" value="{{ value }}">

          <br>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>

      </form>

    </div>
{% endblock %}